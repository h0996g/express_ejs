<!-- views/detail.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Product Details</title>
</head>

<body>
    <h1>Product Details</h1>
    <div>
        <h2>
            <%= product.name %>
        </h2>
        <p>
            <%= product.description %>
        </p>
        <p>Price: $<%= product.price.toFixed(2) %>
        </p>
        <a href="/products/edit/<%= product._id %>">Edit Product</a> |
        <a href="/products/">Back to Products List</a>
    </div>
</body>

</html>